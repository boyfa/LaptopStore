@model LaptopStore.Models.LAPTOP


@{
    ViewBag.Title = "Chitiet";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thông Tin Chi Tiết Laptop</h2>

<div>

    <hr />
    <dl class="dl-horizontal">

        <dt>
            Tên Laptop
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt>
            Giá Bán
        </dt>
        <dd>
            @String.Format("{0:0,0}", Model.Price) VNĐ
        </dd>

        <dt>
            Ảnh Sản Phẩm
        </dt>
        <dd>
            <img src="@Url.Content("~/Images/"+ Model.ImageCover)" style="width:120px" />
        </dd>
        <dt>
            Ngày Cập Nhật
        </dt>

        <dd>
            @String.Format("{0:dd/MM/yyyy}", Model.UpdateDate)

        </dd>

        <dt>
            Số Lượng Còn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt>
            Hãng Sản Xuất
        </dt>

        <dd>
            @Html.DisplayFor(model => model.manufacturer.ManufacturerName)
        </dd>

    </dl>
</div>
<p>

    @Html.ActionLink("Edit", "SuaSP", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Laptop")
</p>



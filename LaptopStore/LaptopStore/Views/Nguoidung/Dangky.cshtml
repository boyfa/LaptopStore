@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<table align="center">
    <h2 style="text-align:center">ĐĂNG KÝ THÀNH VIÊN</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height:40px">
            <td>Họ tên khách hàng:</td>
            <td>
                @Html.TextBox("CustomersName")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Tên đăng nhập:</td>
            <td>
                @Html.TextBox("Account")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Mật khẩu:</td>
            <td>
                @Html.Password("passwords")
                @ViewData["Loi3"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Nhập lại mật khẩu:</td>
            <td>
                @Html.Password("ConfirmPassword")
                @ViewData["Loi7"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Email:</td>
            <td>
                @Html.TextBox("Email")
                @ViewData["Loi4"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Địa Chỉ:</td>
            <td>
                @Html.TextBox("Addresses")
                @ViewData["Loi05"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Điện thoại:</td>
            <td>
                @Html.TextBox("PhoneNumber")
                @ViewData["Loi6"]
            </td>
        </tr>
        <tr style="height:40px">
            <td></td>
            <td>
                <button type="submit" class="btn btn-success" style=" margin-right:5%">Sign up</button>
            </td>
        </tr>
    }
</table>



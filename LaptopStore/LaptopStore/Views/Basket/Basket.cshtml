@using LaptopStore.Models
@model List<Basket>
@{
    ViewBag.Title = "Basket";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2 style="text-align:center">Thông Tin Giỏ Hàng</h2>
<div class="table-responsive-md">
    <table class="table" align="center" border="1">
        <tr style="text-align:center;font-weight:bold">
            <td> Mã Lap top </td>
            <td> Tên Lap top </td>
            <td> Ảnh Lap top </td>
            <td> Số luợng </td>
            <td> Ðơn giá </td>
            <td> Thành Tiền </td>
            <td width="50px"></td>
            <td width="50px"></td>
            <td width="50px"></td>

        </tr>
        @foreach (var item in Model)
        {
            <tr style="text-align:center;font-weight:bold">
                <td> @item.iMalaptop</td>
                <td> @item.sTenlaptop</td>
                <td>
                    <div class="img-thumbnail">
                        <img class="img-responsive" src="/Images/@item.sAnh" style="width: 100%; height:100%">
                    </div>

                </td>
                @using (Html.BeginForm("Capnhatgiohang", "Basket", new { @iMaSp = item.iMalaptop }))
                {

                    <td>
                        <input type="number" min="1" name="txtSoluong" value="@item.iSoluong" style="backbackground-color:yellow" />
                    </td>
                    <td>@String.Format("{0:0,0}", item.dDongia)</td>
                    <td>@String.Format("{0:0,0}", item.dThanhtien)</td>
                    <td><a href="@Url.Action("Details", "Laptop", new { id = item.iMalaptop })">Chi Tiết</a></td>
                    <td>@Html.ActionLink("Xóa", "Xoagiohang", new { @iMaSp = item.iMalaptop })</td>
                    <td><input type="submit" value="Cập nhật" /></td>
                }
            </tr>
        }
        <tr style="font-weight:bold; text-align:right;color:red">
            <td colspan="4">Số Luợng Laptop: @ViewBag.Tongsoluong</td>
            <td colspan="5">Tổng Tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VNÐ</td>
        </tr>
        <tr style="font-weight: bold;color:blueviolet;text-align:right">
            <td colspan="9">
                @Html.ActionLink("Xóa Giỏ Hàng", "Xoatatcagiohang")
            </td>
        </tr>
        <tr style="font-weight: bold; color:blue; text-align :right">
            <td colspan="9" align="center">
                @Html.ActionLink("Order Confirm", "Dathang", "Basket")
            </td>
        </tr>

    </table>
</div>


